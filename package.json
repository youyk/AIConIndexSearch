{
  "name": "ai-conversation-kb",
  "version": "1.0.0",
  "description": "AI对话知识库管理插件",
  "scripts": {
    "build": "npm run build:content && npm run build:background && npm run build:popup",
    "build:content": "esbuild src/content/index.ts --bundle --outfile=content.js --format=iife --target=chrome90",
    "build:background": "esbuild src/background/index.ts --bundle --outfile=background.js --format=esm --target=chrome90",
    "build:popup": "esbuild src/popup/index.ts --bundle --outfile=popup.js --format=iife --target=chrome90 --loader:.css=css",
    "watch": "npm run watch:content & npm run watch:background & npm run watch:popup",
    "watch:content": "esbuild src/content/index.ts --bundle --outfile=content.js --format=iife --target=chrome90 --watch",
    "watch:background": "esbuild src/background/index.ts --bundle --outfile=background.js --format=esm --target=chrome90 --watch",
    "watch:popup": "esbuild src/popup/index.ts --bundle --outfile=popup.js --format=iife --target=chrome90 --loader:.css=css --watch"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "flexsearch": "^0.7.43",
    "html2pdf.js": "^0.10.3"
  }
}
